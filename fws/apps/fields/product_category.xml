<?xml version="1.0" encoding="utf-8"?>
<config type="system" version="1.5.0">
	<name>Product category</name>
	<fields count="1">
		<field1>
			<name>category</name>
			<format>int(11)</format>
			<type>sql</type>
			<values type="sql">
				<query>select `##category`.`id`,concat(`##group`.`name`,'-',`##category`.`desc`) from ##category,##group where `##group`.`id`=`##category`.`groupid` order by `##group`.`sortorder`,`##group`.`id`,`##category`.`sortorder`,`##category`.`id`</query>
			</values>
		</field1>
	</fields>
</config>